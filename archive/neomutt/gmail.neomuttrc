# vi: ft=neomuttrc

# Gmail specific


# Credentials
set imap_user   = $my_guser
set imap_pass   = $my_gpass
set smtp_url = "smtp://$imap_user@smtp.gmail.com:587"
set smtp_pass = $imap_pass
set from = $my_guser

# Mail settings
set hostname="gmail.com"
set folder      = imaps://imap.gmail.com:993
set spoolfile   = +INBOX
mailboxes = +INBOX
set postponed = +[Gmail]/Drafts



